<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="crl-namespace:ShopList.Gui.ViewModels"
             x:Class="ShopList.Gui.Views.ShopListPage"
             Title="Lista de compras">
    <Grid RowDefinitions="Auto,*" >
        <Grid Grid.Row="0" Grid.Column="0" Padding="8" RowSpacing="4" ColumnSpacing="4" RowDefinitions="Auto,Auto" ColumnDefinitions="Auto,*,Auto" >
            <Label FontSize="Medium" VerticalOptions="Center" HorizontalOptions="End" Grid.Row="0" Grid.Column="0" Text="Producto:" ></Label>
            <Entry Grid.Row="0" Grid.Column="1" BackgroundColor="#f0f0f0" TextColor="Black"></Entry>
            <Label FontSize="Medium" VerticalOptions="Center" HorizontalOptions="End" Grid.Row="1" Grid.Column="0"  Text="Cantidad:" ></Label>
            <Entry Grid.Row="1" Grid.Column="1" BackgroundColor="#f0f0f0" TextColor="Black" ></Entry>
            <Button Grid.Row="0" Grid.Column="2" Text="+" FontSize="Medium" ></Button>
            <Button Grid.Row="1" Grid.Column="2" Text="X"  ></Button>
        </Grid>
        <CollectionView  Grid.Row="1" Grid.Column="0" EmptyView="Aun no se han registrado productos"  BackgroundColor="Red" ItemsSource="{Binding Items}">
        </CollectionView>
    </Grid>
</ContentPage>